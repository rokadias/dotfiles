[Unit]
Description=Runs a redis container from the redis docker.
Requires=skydock.service

[Service]
# assume 192.168.1.1 is your proxy server, don't use 127.0.0.1
Type=simple
ExecStart=
ExecStart=/usr/bin/docker run --rm -ip 6379:6379 --name redis-container redis

[Install]
Alias=redis-container.service
