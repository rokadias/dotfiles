(when (package-installed-p 'key-chord)
  (require 'key-chord)
  (key-chord-mode 1)
  (key-chord-define-global "xo" 'other-window)
  (key-chord-define-global "xf" 'find-file-other-window)
  (key-chord-define-global "xd" 'find-file)
  (key-chord-define-global "xv" 'find-file-in-repository-other-window)
  (key-chord-define-global "xb" 'ido-switch-buffer-other-window)
  (key-chord-define-global "x0" 'delete-window)
  (key-chord-define-global "x-" 'split-window-below)
  (key-chord-define-global "x\\" 'split-window-right)
  (key-chord-define-global "xg" 'wg-switch-to-workgroup)
  (setq key-chord-two-keys-delay 0.05))
